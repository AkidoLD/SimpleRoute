{
    "name": "akido-ld/simple-route",
    "description": "A simple PHP routing library",
    "type": "library",
    "require": {
        "php": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "AkidoLd\\SimpleRoute\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3"
    },
    "scripts": {
        "test" : "vendor/bin/phpunit --colors=always --bootstrap vendor/autoload.php --testdox",
        "testall" : "vendor/bin/phpunit --colors=always --bootstrap vendor/autoload.php --testdox tests"
    }
}
